<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="page-wrapper" style="height: auto;" >
                <div class="page-content--bge5" style="height: auto;">
                    <div class="container" style="height: auto;">
                        <div class="login-wrap">
                            <div class="login-content">
                                <div class="login-logo">
                                
                                    <img src="images/icon/avatar-01.jpg" height="100px" width="70px" alt="Cool Admin" /> <strong>RMS</strong></a>        
                                </div>
                                <div class="login-form" style="height: auto;">
                                    <form action="/clinicalEngineer/add" method="POST" enctype="multipart/form-data">
                                        <input type="text" hidden required name="DSSN"  placeholder="New First name" value="{{ clinicalEngineer.DSSN}}" class="form-control">
                                            <input type="text"  hidden  name="Image" value="{{ clinicalEngineer.Image }}" >
                                            <input type="text"  hidden  name="edit" value="edit" >
                                        <div class="form-group">
                                            <label class=" form-control-label">First Name</label>
                                            <input type="text" required name="FName"  placeholder="New First name" value="{{ clinicalEngineer.FName}}"  oninvalid="setCustomValidity('Please enter a valid first name')" pattern="[a-zA-Z]*" oninput="setCustomValidity('')" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Last Name</label>
                                            <input type="text" required name="LName" placeholder="New Last name" value="{{ clinicalEngineer.LName}}" oninvalid="setCustomValidity('Please enter a valid last name')" pattern="[a-zA-Z]*" oninput="setCustomValidity('')" class="form-control">
                                        </div>

                                        <div class="form-group">
                                            <label class=" form-control-label">Phone</label>
                                            <input type="tel" required name="Phone" placeholder="New Phone"  value="{{ clinicalEngineer.Phone}}" oninvalid="setCustomValidity('Please enter a valid phone number')" pattern="[0-9]{10}" oninput="setCustomValidity('')" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Age</label>
                                            <input type="number"  required name="Age" placeholder="New Age" value="{{ clinicalEngineer.Age}}" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Email</label>
                                            <input type="email" required name="Email" placeholder="New Email" value="{{ clinicalEngineer.Email}}" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Address</label>
                                            <input type="text" required name="Address" placeholder="New Address" value="{{ clinicalEngineer.Adress}}" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Work Hours</label>
                                            <input type="number" required name="workHours" placeholder="New Work Hours" value="{{ clinicalEngineer.WorkHours}}" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Department</label>
                                            <select name="Department"required id="select"   class="form-control" >
                                                <option value="R&B">R&B (ROADS AND BUILDINGS)</option>
                                                <option value="MRTH">Ministry of Road Transport & Highways, Government of India</option>
                                                {{!-- <option value="ICU">ICU</option>
                                                <option value="CSSD">CSSD</option> --}}
                                            </select>
                                        </div>                                        
                                        <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">ADD</button>
                                
                                    </form>  
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
             </div>

        </div>
    </div>        
</div>