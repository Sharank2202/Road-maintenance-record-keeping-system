<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">
            <div class="page-wrapper">
                <div class="page-content--bge5">
                    <div class="container">
                        <div class="login-wrap">
                            <div class="login-content">
                                <div class="login-logo">
                                   
                                    <img src="images/icon/avatar-01.jpg" height="100px" width="70px" alt="Cool Admin" /> <strong>RMS</strong></a>        
                                </div>
                                <div class="login-form">
                                    <form action="/agentSupplier/add" method="POST">
                                      <input type="text" name="Id" hidden required value="{{ agentSupplier.Id }}" class="form-control">
                                        <div class="form-group">
                                            <label class=" form-control-label">Name</label>
                                            <input type="text" name="Name" required value="{{ agentSupplier.Name }}" oninvalid="setCustomValidity('Please enter a valid phone number')" pattern="[a-zA-Z]*" oninput="setCustomValidity('')" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Address</label>
                                            <input type="text" required name="Address" value="{{ agentSupplier.Adress }}" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Phone</label>
                                            <input type="tel" name="Phone" required  value="{{ agentSupplier.Phone }}" oninvalid="setCustomValidity('Please enter a valid phone number')" pattern="[0-9]{10}" oninput="setCustomValidity('')" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Email</label>
                                            <input type="email"  required name="Email" value="{{ agentSupplier.Email }}" class="form-control">
                                        </div>
                                        <div class="form-group">
                                            <label class=" form-control-label">Notes</label>
                                            <input type="text"  name="Notes" value="{{ agentSupplier.Notes }}" class="form-control">
                                        </div>
                                        <button class="au-btn au-btn--block au-btn--green m-b-20" type="submit">ADD</button>
                                    </form>  
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
             </div>

        </div>
    </div>        
</div>